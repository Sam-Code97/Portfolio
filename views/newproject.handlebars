<div id="main">
    <div>
        <h1 class="pageheader">New Project</h1>
        <div>
            {{#if isLoggedIn}}
                {{#if isAdmin}}
                    <form action="/projects/new" method="post">
                        <div class="modifypage">
                            <fieldset class="modifyfield col-9 col-lg-11 col-md-11 col-sm-12">
                                <label for="projname">Project name: </label>
                                <input type="text" name="projname" id="projname" required="required">
                                <br />
                                <label for="projyear">Project year: </label>
                                <input class="yearf" type="number" name="projyear" id="projyear" placeholder="2023" required="required">
                                <br />
                                <textarea class="textareadark" name="projdesc" id="projdesc" cols="30" rows="10" required="required"></textarea>
                                <br />
                                <textarea class="textareadark" name="techdesc" id="techdesc" cols="30" rows="10" required="required"></textarea>
                                <br />
                                <label for="projtype">Project type: </label>
                                <select class="multiselec" name="projtype" id="projtype" required="required">
                                    <option value="Education">Education</option>
                                    <option value="Research">Research</option>
                                    <option value="Other">Other</option>
                                </select>
                                <br />
                                <label for="projimg">Project image URL: </label>
                                <input type="text" name="projimg" id="projimg" placeholder="/img/" required="required">
                                <br />
                                <label for="github">Project GitHub repository: </label>
                                <input type="text" name="github" id="github" value="https://github.com/Sam-Code97/" required="required">
                                <br />
                            </fieldset>
                            <input class="btn3" type="submit" value="Add project">
                        </div>
                    </form>
                {{else}}
                    <p>Sorry, you must be an administrator to add a new project</p>
                {{/if}}
            {{else}}
                <p>
                    Sorry, you must be logged in to add a new project! <br>
                    please go to the <a href="/login">login</a> page
                </p>
            {{/if}}
        </div>
    </div>
</div>
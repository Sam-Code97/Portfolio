<div class="main">
    <div class="logincontainer">
        <h1 class="pageheader">Sign up</h1>
        <div>
            <form action="/signup" method="post" id="formsignup" class="form-signin-up">
                <fieldset>
                    <h2 class="signin-up-text">Signup information</h2>
                    <input type="text" name="un" placeholder="Username" required>
                    <br>
                    <input type="password" name="pw" placeholder="Password" required>
                </fieldset>
                <input class="loginbtn"  type="submit" value="Signup">
                <br>
                <a class="no-account-signup-btn" href="/login">Already have an account? Login here!</a>
                <br>
            </form>
        </div>
    </div>
</div>